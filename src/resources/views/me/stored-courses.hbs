<div class='store-courses m-4'>
    <h2 class='title'>Khóa học của tôi</h2>
    <table class='table'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Tên khóa học</th>
                <th scope='col'>Trình độ</th>
                <th scope='col'>Giá tiền</th>
                <th scope='col'>Thời gian tạo</th>
                <th scope='col' colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope='row'>{{inc @index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.cost}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href='/courses/{{this.slug}}' class='btn btn-primary'>Xem</a>
                </td>
                <td>
                    <a href='/courses/{{this._id}}/edit' class='btn btn-warning'>Sửa</a>
                </td>
                <td>
                    <a href='/courses/{{this._id}}/delete' class='btn btn-danger'>Xóa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>