<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>F8-Education</title>
    </head>
    <body>
        <div class='m-4'>
            <h2>Trang chỉnh sửa bài viết</h2>
            <form class='mt-4' action="/news/{{news._id}}?_method=PUT" method='POST'>
                <div class='mb-3'>
                <label for='title' class='form-label'>Tiêu đề</label>
                <input
                    type='text'
                    class='form-control'
                    name='title'
                    id='title'
                    value='{{news.title}}'
                />
            </div>

            <div class='mb-3'>
                <label for='summary' class='form-label'>Tóm tắt</label>
                <textarea
                    class='form-control'
                    name='summary'
                    id='summary'
                >{{news.summary}}</textarea>
            </div>

            <div class='mb-3'>
                <label for='content' class='form-label'>Nội dung</label>
                <textarea
                    class='form-control'
                    name='content'
                    id='content'
                    rows='10'
                >{{news.content}}</textarea>
            </div>

            <div class='mb-3'>
                <label for='thumbnail' class='form-label'>URL Ảnh đại diện</label>
                <input
                    type='text'
                    class='form-control'
                    name='thumbnail'
                    id='thumbnail'
                    value='{{news.thumbnail}}'
                />
            </div>

            <div class='mb-3'>
                <label for='category' class='form-label'>Chuyên mục</label>
                <input
                    type='text'
                    class='form-control'
                    name='category'
                    id='category'
                    value='{{news.category}}'
                />
            </div>

            <div class='mb-3'>
                <label for='tags' class='form-label'>Tags</label>
                <input
                    type='text'
                    class='form-control'
                    name='tags'
                    id='tags'
                    value='{{news.tags}}'
                    placeholder='AI, Công nghệ'
                />
            </div>

            <button type='submit' class='btn btn-primary mt-4'>Lưu lại</button>
            </form>
        </div>
    </body>
</html>